<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.3" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.QuestionOptionsController">
  <items>
      <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <ListView fx:id="questionsList" VBox.vgrow="ALWAYS" />
            <Button fx:id="back" mnemonicParsing="false" onAction="#backButtonClicked" prefHeight="25.0" prefWidth="85.0" text="Back" />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
      <BorderPane>
         <center>
            <GridPane alignment="TOP_CENTER" hgap="20.0" vgap="10.0" BorderPane.alignment="BOTTOM_RIGHT">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="73.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="84.0" minHeight="30.0" prefHeight="56.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="52.0" minHeight="20.0" prefHeight="45.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <VBox alignment="CENTER" prefHeight="47.0" prefWidth="91.0" spacing="10.0">
                     <children>
                        <Label alignment="BOTTOM_CENTER" text="Question text" />
                        <TextField fx:id="questionText" />
                     </children>
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0" GridPane.rowIndex="1">
                     <children>
                        <Label text="Correct answer" />
                        <TextField fx:id="correctAnswer" alignment="CENTER" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1">
                     <children>
                        <Label text="Possible answer 1" />
                        <TextField fx:id="possibleAnswer1" alignment="CENTER" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label text="Possible answer 2" />
                        <TextField fx:id="possibleAnswer2" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <Label text="Possible answer 3" />
                        <TextField fx:id="possibleAnswer3" />
                     </children>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </GridPane>
         </center>
         <top>
            <HBox alignment="BOTTOM_CENTER" spacing="100.0" BorderPane.alignment="BOTTOM_LEFT">
               <children>
                  <ChoiceBox fx:id="questionType" onAction="#questionTypeChosen" prefWidth="150.0" value="ClosedQuestion" />
                  <ComboBox fx:id="difficulty" prefWidth="150.0" value="LOW" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <bottom>
            <HBox alignment="BOTTOM_CENTER" spacing="40.0" BorderPane.alignment="BOTTOM_CENTER">
               <children>
                  <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addButtonPressed" prefHeight="40.0" prefWidth="130.0" text="Add" />
                  <Button fx:id="editBtn" alignment="CENTER" mnemonicParsing="false" onAction="#editButtonClicked" prefHeight="40.0" prefWidth="120.0" text="Edit" />
                  <Button fx:id="removeBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Remove" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
      </BorderPane>
  </items>
</SplitPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fonis.gui.controllers.AddQuestionController">
        <center>
            <GridPane alignment="TOP_CENTER" hgap="20.0" vgap="10.0" BorderPane.alignment="BOTTOM_RIGHT">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="73.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES" />
                    <RowConstraints maxHeight="84.0" minHeight="30.0" prefHeight="56.0" vgrow="SOMETIMES" />
                    <RowConstraints maxHeight="52.0" minHeight="20.0" prefHeight="45.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <VBox alignment="TOP_CENTER" prefHeight="47.0" prefWidth="91.0" spacing="10.0" GridPane.rowSpan="2">
                        <children>
                            <Label alignment="BOTTOM_CENTER" text="Question text" />
                            <TextArea fx:id="questionText" editable="true" />
                        </children>
                        <GridPane.margin>
                            <Insets />
                        </GridPane.margin>
                    </VBox>
                    <VBox alignment="CENTER" spacing="10.0" GridPane.rowIndex="2">
                        <children>
                            <Label text="Correct answer" />
                            <TextField fx:id="correctAnswer" alignment="CENTER" editable="true" />
                        </children>
                        <padding>
                            <Insets bottom="20.0" top="20.0" />
                        </padding>
                    </VBox>
                    <VBox fx:id="vBoxPossible1" alignment="CENTER" spacing="10.0" GridPane.columnIndex="1">
                        <children>
                            <Label text="Possible answer 1" />
                            <TextField fx:id="possibleAnswer1" alignment="CENTER" editable="true" />
                        </children>
                        <padding>
                            <Insets bottom="20.0" top="20.0" />
                        </padding>
                    </VBox>
                    <VBox fx:id="vBoxPossible2" alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <children>
                            <Label text="Possible answer 2" />
                            <TextField fx:id="possibleAnswer2" alignment="CENTER" editable="true" />
                        </children>
                        <padding>
                            <Insets bottom="20.0" top="20.0" />
                        </padding>
                    </VBox>
                    <VBox fx:id="vBoxPossible3" alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <children>
                            <Label text="Possible answer 3" />
                            <TextField fx:id="possibleAnswer3" alignment="CENTER" editable="true" />
                        </children>
                    </VBox>
                </children>
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </BorderPane.margin>
            </GridPane>
        </center>
        <top>
            <HBox alignment="CENTER" spacing="70.0" BorderPane.alignment="CENTER">
                <children>
                    <VBox alignment="CENTER" spacing="10.0">
                        <children>
                            <Label text="Question type" />
                            <ComboBox fx:id="questionType" onAction="#questionTypeChosen" prefHeight="25.0" prefWidth="150.0" value="ClosedQuestion" />
                        </children>
                    </VBox>
                    <VBox alignment="CENTER" spacing="10.0">
                        <children>
                            <Label text="Question difficulty" />
                            <ComboBox fx:id="difficulty" prefWidth="150.0" value="LOW" />
                        </children>
                    </VBox>
            <ToggleButton fx:id="backupBtn" mnemonicParsing="false" text="Backup" />
                </children>
                <BorderPane.margin>
                    <Insets top="20.0" />
                </BorderPane.margin>
            </HBox>
        </top>
        <bottom>
            <HBox alignment="BOTTOM_CENTER" spacing="200.0" BorderPane.alignment="BOTTOM_CENTER">
                <children>
                    <Button fx:id="saveBtn" onAction="#saveButtonClicked" mnemonicParsing="false" prefHeight="40.0" prefWidth="130.0" text="Save" />
                    <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#cancelButtonClicked" prefHeight="40.0" prefWidth="120.0" text="Cancel" />
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
            </HBox>
        </bottom>
    </BorderPane>
